<% @total = 0 %>
<% @order.line_items.each do |item| %>
<tr>
  <td>
    <%= image_tag item.product.image.tiny %>
  </td>
  <td>
    <h4><%= item.product.name %></h4>
    <br>
    <p><%= item.product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item.item_price %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.item_price * item.quantity %>
  </td>
</tr>
  <% @total += item.item_price * item.quantity %>
<% end %>

<tfoot>
  <tr>
    <th colspan="4">
      TOTAL:
    </th>
    <th>
      <%= humanized_money_with_symbol @total %>
    </th>
  </tr>
</tfoot>